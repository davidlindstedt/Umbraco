@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Cms.Core.Strings
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.ProjectSection)Model.Content;

    var projectLabel = content.Value<string>("projectLabel");
    var projectBody = content.Value<IHtmlEncodedString>("projectBody");
    var projectBgImage = content.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("projectBgImage");
}

<section class="relative overflow-visible">
    @if (projectBgImage != null)
    {
        <img src="@projectBgImage.Url()" alt="@projectBgImage.Name"
             class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-black/15"></div>
    }

    <div class="container mx-auto px-4">
        <div class="h-[748px] md:h-[748px]"></div>
    </div>


    <div class="absolute left-1/2 -translate-x-1/2 bottom-0 translate-y-1/2 w-full max-w-[960px] px-4 z-10">
        <div class="bg-neutral rounded-md shadow-2xl ring-1 ring-black/5 p-6 sm:p-10 lg:p-12">
            @if (!string.IsNullOrWhiteSpace(projectLabel))
            {
                <div class="mb-3 text-xs tracking-[0.18em] uppercase text-secondary text-center">
                    @projectLabel
                </div>
            }

            @if (projectBody != null)
            {
                <div class="rte max-w-2xl mx-auto text-center space-y-4">
                    @projectBody
                </div>
            }

            <form class="mt-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <input type="text" placeholder="Name"
                           class="w-full p-3 italic border border-gray-300 rounded focus:ring-2 focus:ring-primary focus:outline-none" />
                    <input type="text" placeholder="Phone"
                           class="w-full p-3 italic border border-gray-300 rounded focus:ring-2 focus:ring-primary focus:outline-none" />
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                    <input type="email" placeholder="Email address"
                           class="w-full p-3 italic border border-gray-300 rounded focus:ring-2 focus:ring-primary focus:outline-none" />

                    <div class="relative">
                        <select class="appearance-none w-full p-3 pr-10 border border-gray-300 rounded focus:ring-2 focus:ring-primary focus:outline-none">
                            <option>Financial consulting</option>
                            <option>Business</option>
                            <option>Tax planning</option>
                        </select>
                        <span class="pointer-events-none absolute right-3 inset-y-0 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                            </svg>
                        </span>
                    </div>
                </div>

                <div class="pt-6 flex justify-center">
                    <button type="button"
                            class="inline-flex items-center justify-center bg-primary text-accent font-semibold px-8 py-3 rounded hover:opacity-90 transition">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
